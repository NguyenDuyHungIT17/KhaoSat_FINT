@model KhaoSat.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-white">
            <h3 class="mb-0">Xóa nhân viên</h3>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Bạn có chắc chắn muốn xóa nhân viên này?</h5>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Họ và tên</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Ngày sinh</dt>
                <dd class="col-sm-9">@Model.DateOfBirth?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Ngày vào làm</dt>
                <dd class="col-sm-9">@Model.HireDate?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Phòng ban</dt>
                <dd class="col-sm-9">@Model.Department?.Name</dd>

                <dt class="col-sm-3">Cấp bậc</dt>
                <dd class="col-sm-9">@Model.Level?.Name</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="EmployeeId" />
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
