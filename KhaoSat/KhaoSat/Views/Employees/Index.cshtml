@model IEnumerable<KhaoSat.Models.Employee>

@{
    ViewData["Title"] = "Danh sách nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0 text-warning">📋 Danh sách nhân viên</h2>
    <div>
        <a asp-controller="Home" asp-action="AdminIndex" class="btn btn-secondary fw-bold shadow-sm me-2">
            ⬅️ Quay về 
        </a>
        <a asp-action="Create" class="btn btn-warning text-dark fw-bold shadow-sm">
            ➕ Tạo mới
        </a>
    </div>
</div>


<!-- Form tìm kiếm và lọc -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-2">
        <div class="col-md-4">
            <input type="text" name="searchString" value="@ViewBag.CurrentFilter"
                   class="form-control border-warning shadow-sm"
                   placeholder="🔍 Tìm kiếm theo tên hoặc email" />
        </div>
        <div class="col-md-4">
            <select name="departmentId" class="form-select border-warning shadow-sm">
                <option value="">-- 🏢 Tất cả phòng ban --</option>
                @foreach (var dept in ViewBag.Departments)
                {
                    if (ViewBag.SelectedDepartment != null && ViewBag.SelectedDepartment == dept.DepartmentId)
                    {
                        <option value="@dept.DepartmentId" selected="selected">@dept.Name</option>
                    }
                    else
                    {
                        <option value="@dept.DepartmentId">@dept.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-4 d-grid">
            <button type="submit" class="btn btn-warning text-white fw-bold shadow-sm">
                🔎 Tìm kiếm
            </button>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-warning text-center">
            <tr>
                <th>Tên</th>
                <th>Email</th>
                <th>Phòng ban</th>
                <th>Cấp bậc</th>
                <th>Vai trò</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @if (Model.Any())
        {
            foreach (var emp in Model)
            {
                <tr>
                    <td class="fw-semibold">@emp.FullName</td>
                    <td>@emp.Email</td>
                    <td>@emp.Department?.Name</td>
                    <td>
                        <span class="badge rounded-pill bg-warning text-dark px-3 py-2 shadow-sm">
                            @emp.Level?.Name
                        </span>
                    </td>
                    <td>
                        @foreach (var role in emp.Employeeroles.Select(er => er.Role))
                        {
                            <span class="badge rounded-pill text-white px-3 py-2 me-1 shadow-sm" style="background-color:#ff7f50">
                                @role.Name
                            </span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@emp.EmployeeId" class="btn btn-sm btn-outline-primary me-1">✏️ Sửa</a>
                        <a asp-action="Delete" asp-route-id="@emp.EmployeeId" class="btn btn-sm btn-outline-danger"
                           onclick="return confirm('Bạn có chắc muốn xóa nhân viên này không?')">🗑️ Xóa</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">🙁 Không có nhân viên nào</td>
            </tr>
        }
        </tbody>
    </table>
</div>
