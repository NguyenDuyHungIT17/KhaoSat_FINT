@model IEnumerable<KhaoSat.Models.Role>

@{
    ViewData["Title"] = "Quản lý Roles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-people-fill"></i> @ViewData["Title"]</h5>
            <div>
                <a asp-action="Create" class="btn btn-sm btn-light me-2">
                    <i class="bi bi-plus-circle"></i> Thêm mới
                </a>
                <a asp-controller="Home" asp-action="AdminIndex" class="btn btn-sm btn-outline-light">
                    <i class="bi bi-arrow-left-circle"></i> Quay về
                </a>
            </div>
        </div>

        <div class="card-body p-3">
            <table class="table table-hover table-bordered table-sm mb-0">
                <thead class="table-warning">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th class="text-center" style="width: 220px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-sm btn-outline-warning me-1">
                                        <i class="bi bi-pencil-square"></i> Sửa
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-sm btn-outline-warning me-1">
                                        <i class="bi bi-eye"></i> Xem
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="text-center text-muted py-3">
                                <em>Chưa có Role nào</em>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
