@model KhaoSat.Models.Test
@{
    ViewData["Title"] = "Chi tiết bài test";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header" style="background-color:#ff914d; color:white; font-weight:bold;">
            <h4 class="mb-0">@Model.Name</h4>
        </div>
        <div class="card-body">
            <p><strong>Loại:</strong> @Model.Type</p>
            <p><strong>Thời gian:</strong> @Model.DurationMinutes phút</p>
            <p><strong>Điểm đạt:</strong> @(Model.PassingScore?.ToString("0.##") ?? "-")</p>
            <p><strong>Người tạo:</strong> @(Model.CreatedByNavigation?.FullName ?? "N/A")</p>

            <hr />
            <h5>Câu hỏi</h5>

            @if (Model.Testquestions != null && Model.Testquestions.Any())
            {
                var stt = 1;
                foreach (var tq in Model.Testquestions)
                {
                    var q = tq.Question;
                    <div class="mb-3 p-3 border rounded bg-light">
                        <strong>@(stt++). @q.Content</strong> <span class="badge bg-secondary">@q.Type</span>

                        @* Hiển thị đáp án theo loại *@
                        @if (q.Type == "MCQ")
                        {
                            <ul>
                                @foreach (var opt in q.QuestionOptions)
                                {
                                    <li>
                                        @opt.OptionText
                                        @(opt.IsCorrect ? "<span class='text-success'>(Đúng)</span>" : "")
                                    </li>
                                }
                            </ul>
                        }
                        else if (q.Type == "TrueFalse")
                        {
                            <p>Đáp án: @(q.QuestionTrueFalse?.CorrectAnswer == true ? "Đúng" : "Sai")</p>
                        }
                        else if (q.Type == "Matching")
                        {
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr><th>Bên trái</th><th>Bên phải</th></tr>
                                </thead>
                                <tbody>
                                    @foreach (var m in q.QuestionMatchings)
                                    {
                                        <tr>
                                            <td>@m.LeftItem</td>
                                            <td>@m.RightItem</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else if (q.Type == "DragDrop")
                        {
                            <ul>
                                @foreach (var d in q.QuestionDragDrops)
                                {
                                    <li>@d.DraggableText → @d.DropTarget</li>
                                }
                            </ul>
                        }
                    </div>
                }
            }
            else
            {
                <p class="text-muted">Bài test chưa có câu hỏi nào.</p>
            }

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>
