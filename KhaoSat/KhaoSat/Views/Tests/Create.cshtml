@model KhaoSat.Models.ViewModel.TestCreateViewModel
@{
    ViewData["Title"] = "Tạo bài test";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var questions = (IEnumerable<dynamic>)ViewBag.Questions;
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header" style="background-color:#ff914d; color:white; font-weight:bold;">
            <h4 class="mb-0">Tạo bài test mới</h4>
        </div>
        <div class="text-end mb-3">
            <a asp-controller="Tests" asp-action="AutoCreate" class="btn"
               style="background-color:#ff914d; color:white; font-weight:bold;">
                <i class="bi bi-lightning-charge"></i> Tạo tự động
            </a>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">

                <div class="mb-3">
                    <label asp-for="TestName" class="form-label fw-bold"></label>
                    <input asp-for="TestName" class="form-control" placeholder="Nhập tên bài test..." />
                </div>

                <div class="mb-3">
                    <label asp-for="Type" class="form-label fw-bold">Loại bài test</label>
                    <select asp-for="Type" class="form-select" asp-items="ViewBag.Roles"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="DurationMinutes" class="form-label fw-bold">Thời gian (phút)</label>
                    <input asp-for="DurationMinutes" class="form-control" type="number" placeholder="VD: 45" />
                </div>

                <div class="mb-3">
                    <label asp-for="PassingScore" class="form-label fw-bold">Điểm đạt</label>
                    <input asp-for="PassingScore" class="form-control" type="number" placeholder="VD: 60" />
                </div>

                <div class="mb-3">
                    <label asp-for="CreatedBy" class="form-label fw-bold">Người tạo</label>
                    <select asp-for="CreatedBy" class="form-select" asp-items="ViewBag.CreatedBy"></select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Chọn câu hỏi từ ngân hàng</label>
                    <div class="border rounded p-3" style="max-height:300px; overflow-y:auto; background-color:#fffaf5;">
                        @foreach (var q in questions)
                        {
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox"
                                       name="SelectedQuestions[]" value="@q.QuestionId" id="q_@q.QuestionId" />
                                <label class="form-check-label" for="q_@q.QuestionId">@q.Content</label>
                            </div>
                        }
                    </div>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn" style="background-color:#ff914d; color:white; font-weight:bold;">
                        <i class="bi bi-save"></i> Lưu bài test
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
