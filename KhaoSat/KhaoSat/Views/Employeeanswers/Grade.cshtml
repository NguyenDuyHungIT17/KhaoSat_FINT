@model KhaoSat.Models.Employeeanswer
@{
    ViewData["Title"] = "Chấm câu trả lời";
}

<h2>@ViewData["Title"]</h2>

<div class="card p-3 mb-3">
    <p><strong>Nhân viên:</strong> @Model.EmployeeTest.Employee.FullName</p>
    <p><strong>Bài test:</strong> @Model.EmployeeTest.Test.Name</p>
    <p><strong>Câu hỏi:</strong> @Model.Question.Content</p>
    <p><strong>Câu trả lời:</strong> @Model.Answer</p>
</div>

<form asp-action="GradeConfirmed" method="post">
    <input type="hidden" name="employeeTestId" value="@Model.EmployeeTestId" />
    <input type="hidden" name="questionId" value="@Model.QuestionId" />

    <div class="form-group">
        <label>Đánh giá</label><br />
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="isCorrect" id="correct" value="true" required />
            <label class="form-check-label" for="correct">Đúng</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="isCorrect" id="incorrect" value="false" />
            <label class="form-check-label" for="incorrect">Sai</label>
        </div>
    </div>

    <button type="submit" class="btn btn-success mt-3">Lưu đánh giá</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
</form>
