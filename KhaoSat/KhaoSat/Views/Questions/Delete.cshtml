@model KhaoSat.Models.Question

@{
    ViewData["Title"] = "Xóa Câu Hỏi";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Xóa Câu Hỏi</h4>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">Bạn có chắc chắn muốn xóa câu hỏi này không?</p>

            <dl class="row">
                <dt class="col-sm-3">Nội dung</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>

                <dt class="col-sm-3">Loại</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Type)</dd>

                <dt class="col-sm-3">Độ khó</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Difficulty)</dd>

                <dt class="col-sm-3">Vai trò</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Role)</dd>

                <dt class="col-sm-3">Kỹ năng</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Skill.Name)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete" method="post" class="mb-0">
                <input type="hidden" asp-for="QuestionId" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
